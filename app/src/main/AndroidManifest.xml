<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mplayer">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.body.management.activities.ManagePlaylistActivity"></activity>
        <activity android:name=".activities.body.management.activities.ManageSetupActivity" />
        <activity android:name=".activities.body.management.activities.ManageDeviceActivity" />
        <activity android:name=".activities.body.BaseActivity" />
        <activity android:name=".activities.SetupActivity" />
        <activity android:name=".activities.UpdatePlaylistActivity" />
        <activity android:name=".activities.HomeActivity" />
        <activity android:name=".activities.login.SignUpActivity" />
        <activity android:name=".activities.player.PlayerActivity" />
        <activity android:name=".activities.login.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>