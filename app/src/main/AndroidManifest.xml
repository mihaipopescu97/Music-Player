<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mplayer">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/mplayer_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".structure.body.management.activities.SelectBuildActivity"></activity>
        <activity android:name=".structure.body.management.activities.NewBuildActivity" />
        <activity android:name=".structure.body.management.activities.SelectActivity" />
        <activity android:name=".structure.body.management.activities.settings.SettingsActivity" />
        <activity android:name=".structure.body.management.activities.settings.PlaylistSettingsActivity" />
        <activity android:name=".structure.body.management.activities.settings.SetupSettingsActivity" />
        <activity android:name=".structure.body.management.activities.settings.DeviceSettingsActivity" />
        <activity android:name=".structure.body.management.activities.BaseActivity" />
        <activity android:name=".structure.login.SignUpActivity" />
        <activity android:name=".structure.player.PlayerActivity" />
        <activity android:name=".structure.login.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".structure.body.management.fragments.devices.DeviceAddActivity" />
    </application>

</manifest>